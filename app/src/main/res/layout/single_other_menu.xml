<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/others_card_view"
    card_view:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/others_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/others_name"
                android:layout_alignLeft="@id/others_image"
                android:layout_alignTop="@id/others_image"
                android:layout_alignRight="@id/others_image"
                android:layout_alignBottom="@id/others_image"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>